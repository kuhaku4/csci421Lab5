extends ../nav

block content
  h1= title
  each blog, idx in blogs
    .card
      .card-body
        h4.card-title= blog.blogtitle
        p.card-text= blog.blogtext
        ul.nav.nav-pills.justify-content-end
          li.nav-item 
            a.nav-link(href="/blog/"+blog._id+"/edit")
              i.bi.bi-pencil-square 
              span Edit
          li.nav-item
            a.nav-link(href="/blog/"+blog._id+"/delete")
              i.bi.bi-trash3
              span Delete
